---
import { Icon } from 'astro-icon/components';
import '../styles/home.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const githubUsername = 'supersweet-dev';
const linkedinUsername = 'supersweet';
const instagramUsername = 'gem.ki.du';
const email = 'gema.ap97@gmail.com';
const mailto = `mailto:${email}`;
const resumeLink =
	'https://github.com/supersweet-dev/supersweet-dev.github.io/blob/main/resume.pdf';
---

<BaseLayout>
	<main>
		<!-- Centered header -->
		<div class="header">
			<p class="title">saccharine</p>
			<p class="bio">
				Gema Alvarez | They/Them | Full-Stack Developer | Visual Artist
			</p>

			<!-- Social Icons -->
			<div class="social-links">
				<a
					href={mailto}
					rel="nofollow noopener noreferrer"
					aria-label="Email"
				>
					<Icon name="mdi:email-outline" class="social-icon" />
				</a>
				<a
					href={`https://github.com/${githubUsername}`}
					target="_blank"
					aria-label="GitHub"
				>
					<Icon name="simple-icons:github" class="social-icon" />
				</a>
				<a
					href={`https://www.linkedin.com/in/${linkedinUsername}`}
					target="_blank"
					aria-label="LinkedIn"
				>
					<Icon name="simple-icons:linkedin" class="social-icon" />
				</a>
				<a
					href={`https://www.instagram.com/${instagramUsername}`}
					target="_blank"
					aria-label="Instagram"
				>
					<Icon name="simple-icons:instagram" class="social-icon" />
				</a>
				<a href={resumeLink} target="_blank" aria-label="Resume">
					<Icon
						name="mdi:file-document-outline"
						class="social-icon"
					/>
				</a>
			</div>
		</div>
		<!-- Content -->
		<div class="content">
			<p>
				This is my personal space. Here I showcase my work, share
				thoughts, and document my journey as a developer and artist.
			</p>
			<p>
				Feel free to check out my resume, or connect with me on social
				media. Currently building out this site.
			</p>
		</div>
		<footer class="footer">
			© 2025 Gema Alvarez — Built with <a
				href="https://astro.build/"
				target="_blank"
				rel="noopener noreferrer"
			>
				Astro<Icon name="simple-icons:astro" class="footer-icon" /></a
			>
		</footer>
	</main>
</BaseLayout>
